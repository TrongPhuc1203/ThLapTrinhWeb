@*@model IEnumerable<ThucHanh_Bai3_02.Models.Course>*@

@model ThucHanh_Bai3_02.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
    < link href = "~/Content/Site.css" rel = "stylesheet" />
}

<h2>Attending</h2>
<ul class="course">
    @foreach (var course in Model.UpcommingCourses)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                    @if (Model.ShowAction)
                    {//default
                        @*<button class="btn btn-link btn-sm js-toggle-follow"
                                data-user-id="@course.LecturerId">
                            Follow
                        </button>*@
                        <span class="label label-warning">Canceled</span>
                    }
                    @if (Model.ShowAction && !course.IsCaceled) { 
                        <button class="btn btn-link btn-sm js-toggle-follow" data-user-
                         id="@course.LecturerId">Follow</button>
                    }


                </span>
                <span class="category">
                    @course.Category.Name

                </span>
                @if (Model.ShowAction)
                {
                    <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance"> Going?</button>

                }

            </div>
        </li>
    }
</ul>
